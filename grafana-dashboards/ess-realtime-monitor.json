{
  "dashboard": {
    "id": null,
    "uid": "ess-realtime-monitor",
    "title": "ESS Real-Time Live Monitor",
    "description": "Live monitoring dashboard with real-time updates for ESS operations",
    "tags": ["ess", "realtime", "live", "monitoring"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Live Log Stream",
        "type": "logs",
        "targets": [
          {
            "expr": "{job=~\"ess-app|ess-error\"} |= \"\"",
            "refId": "A",
            "datasource": {
              "type": "loki",
              "uid": "ef69p8jegs4xsf"
            }
          }
        ],
        "options": {
          "showTime": true,
          "showLabels": true,
          "showCommonLabels": false,
          "wrapLogMessage": true,
          "prettifyLogMessage": false,
          "enableLogDetails": true,
          "dedupStrategy": "none",
          "sortOrder": "Descending"
        },
        "gridPos": {"h": 16, "w": 24, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "title": "Active Connections",
        "type": "stat",
        "targets": [
          {
            "expr": "count(count by (job) ({job=~\"ess-app|ess-error\"}))",
            "refId": "A",
            "datasource": {
              "type": "loki",
              "uid": "ef69p8jegs4xsf"
            }
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "red", "value": 0},
                {"color": "yellow", "value": 1},
                {"color": "green", "value": 2}
              ]
            }
          }
        },
        "gridPos": {"h": 4, "w": 6, "x": 0, "y": 16}
      },
      {
        "id": 3,
        "title": "Live Request Rate",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(rate({job=\"ess-app\"} [1m]))",
            "refId": "A",
            "datasource": {
              "type": "loki",
              "uid": "ef69p8jegs4xsf"
            }
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "green", "value": 0},
                {"color": "yellow", "value": 1},
                {"color": "red", "value": 10}
              ]
            },
            "unit": "reqps"
          }
        },
        "gridPos": {"h": 4, "w": 6, "x": 6, "y": 16}
      },
      {
        "id": 4,
        "title": "Live Error Rate",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(rate({job=\"ess-error\"} [1m]))",
            "refId": "A",
            "datasource": {
              "type": "loki",
              "uid": "ef69p8jegs4xsf"
            }
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "green", "value": 0},
                {"color": "yellow", "value": 0.1},
                {"color": "red", "value": 1}
              ]
            },
            "unit": "reqps"
          }
        },
        "gridPos": {"h": 4, "w": 6, "x": 12, "y": 16}
      },
      {
        "id": 5,
        "title": "System Status",
        "type": "stat",
        "targets": [
          {
            "expr": "1",
            "refId": "A",
            "datasource": {
              "type": "loki",
              "uid": "ef69p8jegs4xsf"
            }
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "fixed",
              "fixedColor": "green"
            },
            "mappings": [
              {
                "options": {
                  "1": {
                    "text": "ONLINE"
                  }
                },
                "type": "value"
              }
            ]
          }
        },
        "gridPos": {"h": 4, "w": 6, "x": 18, "y": 16}
      }
    ],
    "time": {
      "from": "now-15m",
      "to": "now"
    },
    "refresh": "5s",
    "schemaVersion": 37,
    "version": 1,
    "links": []
  }
}